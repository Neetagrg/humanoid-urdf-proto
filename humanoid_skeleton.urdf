<?xml version="1.0"?>
<robot name="ardupilot_humanoid">

  <link name="base_link"/>

  <link name="torso">
    <visual>
      <geometry><box size="0.15 0.1 0.3"/></geometry>
      <material name="grey"><color rgba="0.5 0.5 0.5 1"/></material>
    </visual>
    <inertial>
      <mass value="2.5"/> 
      <origin xyz="0 0 0.15"/>
      <inertia ixx="0.02" ixy="0" ixz="0" iyy="0.02" iyz="0" izz="0.01"/>
    </inertial>
  </link>

  <joint name="base_to_torso" type="fixed">
    <parent link="base_link"/>
    <child link="torso"/>
  </joint>

  <link name="l_hip_pitch_link">
    <visual>
      <geometry><sphere radius="0.03"/></geometry>
    </visual>
  </link>

  <joint name="l_hip_pitch" type="revolute">
    <parent link="torso"/>
    <child link="l_hip_pitch_link"/>
    <origin xyz="0 0.08 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit effort="10" lower="-1.5" upper="1.5" velocity="1.0"/>
  </joint>

  <link name="l_thigh">
    <visual>
      <origin xyz="0 0 -0.15" rpy="0 0 0"/>
      <geometry><cylinder length="0.3" radius="0.025"/></geometry>
      <material name="silver"><color rgba="0.7 0.7 0.7 1"/></material>
    </visual>
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 -0.15"/>
      <inertia ixx="0.007" ixy="0" ixz="0" iyy="0.007" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <joint name="l_knee" type="revolute">
    <parent link="l_hip_pitch_link"/>
    <child link="l_thigh"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit effort="10" lower="0" upper="2.0" velocity="1.0"/>
  </joint>

</robot>