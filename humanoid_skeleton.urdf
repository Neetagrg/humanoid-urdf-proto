<?xml version="1.0"?>
<robot name="ardupilot_humanoid">

  <link name="base_link"/>

  <link name="torso">
    <inertial>
      <origin xyz="0 0 0.15" rpy="0 0 0"/>
      <mass value="2.5"/>
      <inertia ixx="0.02" ixy="0" ixz="0" iyy="0.02" iyz="0" izz="0.01"/>
    </inertial>
    <visual>
      <geometry><box size="0.15 0.1 0.3"/></geometry>
      <material name="grey"><color rgba="0.5 0.5 0.5 1"/></material>
    </visual>
  </link>

  <joint name="base_to_torso" type="fixed">
    <parent link="base_link"/>
    <child link="torso"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <link name="l_hip_pitch_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
    <visual>
      <geometry><sphere radius="0.03"/></geometry>
    </visual>
  </link>

  <joint name="l_hip_pitch" type="revolute">
    <parent link="torso"/>
    <child link="l_hip_pitch_link"/>
    <origin xyz="0 0.08 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit effort="20.0" lower="-1.571" upper="0.523" velocity="3.0"/>
  </joint>

  <link name="l_thigh">
    <inertial>
      <origin xyz="0 0 -0.15" rpy="0 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.008" iyz="0" izz="0.005"/>
    </inertial>
    <visual>
      <origin xyz="0 0 -0.15" rpy="0 0 0"/>
      <geometry><cylinder length="0.3" radius="0.025"/></geometry>
      <material name="silver"><color rgba="0.7 0.7 0.7 1"/></material>
    </visual>
  </link>

  <joint name="l_knee" type="revolute">
    <parent link="l_hip_pitch_link"/>
    <child link="l_thigh"/>
    <origin xyz="0 0 -0.05" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit effort="15.0" lower="0.0" upper="2.618" velocity="3.0"/>
  </joint>

</robot>